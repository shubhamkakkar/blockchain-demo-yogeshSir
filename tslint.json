{
    "compilerOptions": {
        "experimentalDecorators": true,
        "lib": [
            "es7",
            "es8",
            "dom",
            "esnext.asynciterable"
        ],
        "noUnusedLocals": true,
        "declaration": true,
        "removeComments": false,
        "noImplicitUseStrict": true
    },
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "no-console": false
    },
    "rulesDirectory": [],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
